{
  "name": "sbt-test-sharding",
  "version": "0.0.1",
  "type": "module",
  "description": "GitHub Action for automatically sharding Scala tests",
  "repository": "https://github.com/juanri0s/sbt-test-sharding",
  "homepage": "https://github.com/juanri0s/sbt-test-sharding",
  "bugs": "https://github.com/juanri0s/sbt-test-sharding/issues",
  "license": "MIT",
  "author": "juanri0s",
  "keywords": [
    "github-action",
    "scala",
    "sbt",
    "test-sharding",
    "ci"
  ],
  "engines": {
    "node": ">=24"
  },
  "main": "dist/index.js",
  "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501",
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md,yml,yaml}\"",
    "update": "pnpm update --latest --recursive"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "glob": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  }
}
