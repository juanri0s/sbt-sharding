{
  "name": "sbt-test-sharding",
  "version": "0.0.1",
  "type": "module",
  "description": "GitHub Action for automatically sharding Scala tests",
  "repository": "https://github.com/juanri0s/sbt-test-sharding",
  "homepage": "https://github.com/juanri0s/sbt-test-sharding",
  "bugs": "https://github.com/juanri0s/sbt-test-sharding/issues",
  "license": "MIT",
  "author": "juanri0s",
  "keywords": [
    "github-action",
    "scala",
    "sbt",
    "test-sharding",
    "ci"
  ],
  "engines": {
    "node": ">=24"
  },
  "main": "dist/index.js",
  "packageManager": "pnpm@10.26.0+sha512.3b3f6c725ebe712506c0ab1ad4133cf86b1f4b687effce62a9b38b4d72e3954242e643190fc51fa1642949c735f403debd44f5cb0edd657abe63a8b6a7e1e402",
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md,yml,yaml}\"",
    "update": "pnpm update --latest --recursive"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "glob": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  }
}
